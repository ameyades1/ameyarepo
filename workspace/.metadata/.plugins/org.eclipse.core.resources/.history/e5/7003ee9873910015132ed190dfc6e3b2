#include <stdio.h>
#include "Version.h"

unsigned char* ucMsg1 = "-------------------------------------------------------";
unsigned char* ucMsg2 = "Seven Segment Optical Character Recognition Application";
unsigned char* ucMsg3 = "Version: 1.5";
unsigned char* ucMsg4 = "Creation Date: 14 / 10 / 2010";
unsigned char* ucMsg5 = "Usage Information: ";

void DisplayVersionInfo()
{
	printf("\n%s",ucMsg1);
	printf("\n%s",ucMsg2);
	printf("\n%s",ucMsg3);

	printf("\n\n%s\n",ucMsg5);
	printf("\nssocr argument1 argument2 argument3\n");
	printf("\nargument1 = Input BMP Image (8 bit grayscale format)");
	printf("\nargument2 = Output text file");
	printf("\nargument3 = Angle of rotation \n\t(clockwise positive, in mulitiples of 90 only)");
	printf("\n%s\n",ucMsg1);
	
}
